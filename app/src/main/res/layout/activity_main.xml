<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.dan.translator.MainActivity"
    android:orientation="vertical"

    >

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="ru.dan.translator.LangsSelector"
        tools:layout="@layout/langs_selector"
        android:id="@+id/langsSelector"
        android:tag="langsSelector"
    />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="ru.dan.translator.TextEditor"
        tools:layout="@layout/text_editor"
        android:id="@+id/textEditor"
        android:tag="textEditor"
        android:layout_margin="10sp"
        />

</LinearLayout>
